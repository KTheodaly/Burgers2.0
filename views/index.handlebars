<h1>Burgers of the Day:</h1>

<main>
    <div class="container">
        <div class="row">
            <div class="col s6">
                <!--ugh can't figure out how to use bootstrap grid really, the items are moving down not side to side-->
                {{#each burgers}}
                {{#unless this.devoured}}
                <div class='burgerAvailable'>
                    <div id='availableName'>{{this.burger_name}}</div>
                    <div>
                        <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                            <button type="submit" class="devourbutt"> Devour it!</button>
                        </form>
                    </div>
                </div>
                {{/unless}}
                {{/each}}
            </div>

            <div class="col s6">
                {{#each burgers}}
                {{#if this.devoured}}
                <div class='burgerEaten'>
                    <div>
                        {{this.burger_name}}
                    </div>
                </div>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</main>

<h2>Add A Burger</h2>

<div class="row">
    <div class="col s12">
        <form action="/burgers" method="POST">
            <!--need to figure out how to validate, right now you can add blanks-->
            <input type="text" id="name" name="burger_name" placeholder="Your creation!">
            <button type="submit" class="addBurgerButton">Add Your Burger</button>
        </form>
    </div>
</div>